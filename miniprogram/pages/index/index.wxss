/* 首页导航 */
page {
  color: #666;
  padding: 10rpx;
}

.nav_wrap {

}

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}

.nav_item {
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item.active {
  border-bottom: 5rpx solid #de688b;
}

.slides{
  margin-top: 10rpx;
}
.slides swiper{
  height: 300rpx;
}

.slides image {
  width: 100%;
  height: 100%;
}

/* 视频 */
.video_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5px;
  justify-content: space-between;
}

.video_item {
    width: 48%;
    margin-bottom: 30rpx;
}

.video_img{
  position: relative;
}

.video_img image{
  width: 100%;
  border-radius: 10rpx;
}

.video_img .play_count_wrap {
  position: absolute;
  bottom: 10rpx;
  left: 4rpx;
  color: #fff;
  font-size: 24rpx;
}

.video_img .comment_count_wrap {
  position: absolute;
  bottom: 10rpx;
  right: 4rpx;
  color: #fff;
  font-size: 24rpx;
}

.video_title {
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  word-wrap: break-word;
}